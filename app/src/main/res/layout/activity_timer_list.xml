<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:id="@+id/arrows_and_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/four_buttons_background">


    <LinearLayout
        android:id="@+id/layout_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_marginEnd="60dp"
        >

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="Id"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sort_list_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/list_sort_dates"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sort_list_score"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/list_sort_scores"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sort_list_cube"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/list_sort_cubes"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sorting_arrows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_sort"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="60dp">


        <ImageView
            android:id="@+id/sort_by_id"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@android:drawable/arrow_down_float"/>
        <ImageView
            android:id="@+id/sort_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@android:drawable/arrow_down_float"
            android:layout_marginStart="5dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/sort_by_score"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:src="@android:drawable/arrow_down_float"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:id="@+id/sort_by_cube"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@android:drawable/arrow_down_float"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrows_and_text">


        <ListView
            android:id="@+id/listViewScores"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="120dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_for_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="@color/four_buttons_background">

    <Button
        android:id="@+id/button_delete_scores"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/delete_scores"
        android:backgroundTint="@color/button_menu_active"
        android:textColor="@color/button_menu_text_active"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>